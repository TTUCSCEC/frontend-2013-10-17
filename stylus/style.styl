@import "stylus-font-awesome"
@import url("http://fonts.googleapis.com/css?family=Montserrat+Alternates|Cantarell")

font-awesome("../font")

body
  margin: 0
  background-color: #F1F1F1
  background-image: url(../img/bg.png)
  font-size: 16px
  font-family: 'Cantarell', sans-serif
  color: #999

.pagename
  text-align: center
  font-size: 48px
  color: #FFF
  margin: 50px 0 40px
  font-family: 'Montserrat Alternates', sans-serif
  text-shadow: 0 1px 1px #F5F5F5, 0 2px 1px #F1F1F1, 0 3px 1px #EEE, 0 4px 1px #DDD, 0 5px 1px #999, 0 5px 5px #CCC
  letter-spacing: 5px

.todo
  position: relative
  width: 400px
  margin: 0 auto 20px
  background-color: #FFF
  background-image: linear-gradient(90deg, transparent 36px, #f5d6d6 36px, transparent 37px, transparent 39px, #f5d6d6 39px, transparent 40px)
  background-size: 40px 1px
  background-repeat: repeat-y
  box-shadow: 0 3px 5px rgba(0, 0, 0, .05), 0 2px 10px rgba(0, 0, 0, .1)

  &:before
  &:after
    content: ''
    background-color: #FFF
    position: absolute
    box-shadow: 0 1px 5px rgba(0, 0, 0, .1), 0 2px 10px rgba(0, 0, 0, .1)

  &:before
    z-index: -1
    left: 1%
    right: 1%
    top: 1%
    bottom: 1%
    margin-bottom: -1.5%

  &:after
    z-index: -2
    left: 2%
    right: 2%
    top: 2%
    bottom: 2%
    margin-bottom: -3%

.todo-search
  position: relative
  border-bottom: 1px #CCC dotted
  height: 50px

.todo-search-icon
  width: 40px
  height: 50px
  line-height: 50px
  text-align: center
  display: block

.todo-search-input
  position: absolute
  top: 0
  right: 10px
  left: 50px
  font-size: 16px
  font-family: 'Cantarell', sans-serif
  color: #999
  line-height: 24px
  border: none
  height: 50px
  padding: 13px 0
  box-sizing: border-box
  outline: none

.todo-list
  margin: 0
  padding: 0
  line-height: 50px

.todo-list-item
  list-style: none
  margin: 0
  padding: 0 0 0 50px
  border-bottom: 1px #EEE dotted
